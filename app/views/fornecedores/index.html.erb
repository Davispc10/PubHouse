<h1>Fornecedores</h1>
<br>
<%= render 'formbusca' %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cnpj</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fornecedores.each do |fornecedor| %>
      <tr>
        <td><%= fornecedor.nome %></td>
        <td><%= fornecedor.cnpj %></td>
        <td><%= fornecedor.telefone %></td>
        <td><%= fornecedor.email %></td>
        <td><%= link_to 'Ver', fornecedor, class: "btn btn-info" %>
          <%= link_to 'Editar', edit_fornecedor_path(fornecedor), class: "btn btn-warning" %>
          <%= link_to 'Excluir', fornecedor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
