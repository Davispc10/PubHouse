<h1>Clientes</h1>
<br>
<%= render 'formbusca' %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Telefone</th>
      <th>Endereco</th>
      <th>Data de nascimento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td><%= cliente.cpf %></td>
        <td><%= cliente.telefone %></td>
        <td><%= cliente.endereco %></td>
        <td><%= cliente.dataNascimento %></td>
        <td><%= link_to 'Ver', cliente, class: "btn btn-info" %>
          <%= link_to 'Editar', edit_cliente_path(cliente), class: "btn btn-warning" %>
          <%= link_to 'Excluir', cliente, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
