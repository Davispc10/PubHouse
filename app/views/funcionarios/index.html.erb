<p id="notice"><%= notice %></p>

<h1>Funcionários</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Cargo</th>
      <th>Salario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.telefone %></td>
        <td><%= funcionario.cargo %></td>
        <td><%= funcionario.salario %></td>
        <td><%= link_to 'Show', funcionario, class: "btn btn-info" %></td>
        <td><%= link_to 'Edit', edit_funcionario_path(funcionario), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', funcionario, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo funcionário', new_funcionario_path, class: "btn btn-success" %>
