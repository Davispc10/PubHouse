<p id="notice"><%= notice %></p>

<h1>Funcionários</h1>
<br>
<%= render 'formbusca' %>
<br>
<table class="table">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Telefone</th>
      <th>Cargo</th>
      <th>Salario</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nome %></td>
        <td><%= funcionario.telefone %></td>
        <td><%= funcionario.cargo %></td>
        <td><%= funcionario.salario %></td>
        <td><%= link_to 'Ver', funcionario, class: "btn btn-info" %>
          <%= link_to 'Editar', edit_funcionario_path(funcionario), class: "btn btn-warning" %>
          <%= link_to 'Excluir', funcionario, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    <td> <%= will_paginate @funcionarios, previous_label: "Anterior", next_label: "Próxima" %></td>
  </tbody>
</table>

<br>

<%= link_to 'Novo funcionário', new_funcionario_path, class: "btn btn-success" %>
